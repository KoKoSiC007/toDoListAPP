<div id="blured">

<header>
  <h1>Задачи</h1>
  <a href="javascript:show()" ><img src=plus.png></a>
</header>
<script>


</script>
<div id="table">

          <% @projects.each do |project| %>
          <div id="card">
            <h2><%= project.title %></h2>
            <% for i in project.todos %>
                <%= form_for :todo, :html => {:class => 'todos', :value => i.id, } do |f| %>
                <%= f.check_box i.id, {checked: i[:isCompleted],id: i.id}   %>
                <%= f.label i.id , i[:text]%>
                  <%end %>
            <%end %>
          </div>

<%end %>

</div>

</div>
<div id="overlay">
  <div id="add_todo">
    <div id="title">
      <h1>Новая Задача</h1>
    </div>
    <%= form_for :todo, url: todos_path do |form| %>
      <div id="windinput">
        <%=form.collection_select(:todo_id, @projects, :id, :title,{}) %>

        <%= form.text_field :text, placeholder: "Название задачи"%> <br>
      </div>
      <div id="buttons">
        <%= button_tag "ОТМЕНА", type:'button',class: 'close', onclick: 'hide()' %>
        <%=form.submit 'OK', class: 'OK'%>
      </div>

    <%end %>
  </div>
</div>
